<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name></display-name>
  <servlet>
    <servlet-name>DesignerServlet</servlet-name>
    <servlet-class>com.demo.servlet.Designer.DesignerServlet</servlet-class>
  </servlet>
 
 <servlet>
    <servlet-name>ActionAdd</servlet-name>
    <servlet-class>com.demo.servlet.action.ActionAdd</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ActionEdit</servlet-name>
    <servlet-class>com.demo.servlet.action.ActionEdit</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ActionDel</servlet-name>
    <servlet-class>com.demo.servlet.action.ActionDel</servlet-class>
  </servlet>
 
  <servlet-mapping>
    <servlet-name>DesignerServlet</servlet-name>
    <url-pattern>/util/Designer</url-pattern>
  </servlet-mapping>
 
    <servlet-mapping>
    <servlet-name>ActionAdd</servlet-name>
    <url-pattern>/servlet/action/ActionAdd</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ActionEdit</servlet-name>
    <url-pattern>/servlet/action/ActionEdit</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ActionDel</servlet-name>
    <url-pattern>/servlet/action/ActionDel</url-pattern>
  </servlet-mapping>
  
   <servlet>
    <servlet-name>CaseServlet</servlet-name>
    <servlet-class>com.demo.servlet.Case.CaseServlet</servlet-class>
   </servlet>
  
  <servlet-mapping>
    <servlet-name>CaseServlet</servlet-name>
    <url-pattern>/util/Case</url-pattern>
  </servlet-mapping>
   
  
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>